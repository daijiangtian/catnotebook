birthdays = {'Y': 'Feb,2nd', 'D': 'Jan,10th', 'C': 'Dec,20th'}
while True:
    print('Enter the name:(blank to quit)')
    name = input()
if name == '':
    break
if name in birthdays:
    print(birthdays[name] + ' is the borthday of ' + name)
else:
    print('I do not know the birthday of' + name)
    print('what is their birthday')
    bday = input()
    birthdays[name] = bday
    print('birthday database updated')
    print(birthdays)

import pprint
message = 'It was a bright cold day in April,and the clocks were striking thirteen.'
count = {}
for character in message:
    count.setdefault(character, 0)
    count[character] = count[character] + 1
    pprint.pprint(count)
allguests = {'Alice': {'apples': 5, 'pretzels': 12},
             'Bob': {'ham': 3, 'apples': 2},
             'Carol': {'cups': 3, 'apple pies': 1}}
             
def total(guest, item):
    num = 0
    for k, v in guest.items():
        num = num + v.get(item, 0)
    return num
 
print('apple ' + str(total(allguests, 'apples')))
print('apple pies ' + str(total(allguests, 'apple pies')))
