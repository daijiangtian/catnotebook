secretnumber = random.randint(1, 20)
print('I am thinking about a number between 1 to 20')
for guesstaken in range(1, 7):
    print('take a guess')
    guess = int(input())
if guess < secretnumber:
    print('your guess is too low')
elif guess > secretnumber:
    print('your guess is too high')
else:
    break
if guess == secretnumber:
    print('you guessd my number in ' + str(guesstaken) + ' guesses!')
else:
    print('nope,my name is ' + str(secretnumber))
    
